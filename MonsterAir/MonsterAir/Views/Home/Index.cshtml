@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>MonsterAir | Log in</title>
    <link rel="icon" href="~/img/monster_air_logo.jpg" type="image/x-icon">

    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- SweetAlert2 -->
    <link href="~/css/sweetalert2.min.css" rel="stylesheet" />

    <style>
        .login-popup {
            border-radius: 10px;
            position: relative;
            padding-top: 8%;
            opacity: 0.8;
        }

        .login-body {
            overflow: hidden;
            position: relative;
        }

        .bg-image {
            opacity: 0.6;
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: auto;
        }
    </style>
</head>

<body class="login-body">
    <img class="bg-image"
         src="../../img/monster_air_bg.jpeg"
         alt="">
    <div class="login-popup row">
        <div class="col-lg-5 m-lg-auto">
            <div class="card mt-4">
                <div class="login-card-body p-lg-5">
                    <p class="card-title">Sign in to start your session</p>
                    <div class="input-group pt-2">
                        <input type="email" id="loginEmail" class="form-control" placeholder="Enter Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group pt-2">
                        <input type="password" id="loginPassword" class="form-control" placeholder="Enter Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="button" onclick="Login()" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                    </div>

                    <p class="mb-0">
                        <a href="forgot-password.html">I forgot my password</a>
                    </p>
                    <p class="mb-0">
                        @Html.ActionLink("Register New Membership", "Register", "Home")
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- /.login-card-body -->
    <!--</div>
        </div>
    </div>-->
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Sweet alert 2 script -->
    <script src="~/js/sweetalert2.min.js"></script>

    <script type="text/javascript">
        function Login() {
            $.ajax({
                contentType: "application/x-www-form-urlencoded; charset=utf-8",
                data: {
                    UserName: $("#loginEmail").val(),
                    Password: $("#loginPassword").val(),
                    grant_type: 'password'
                },
                url: "",
                type: "Post",
                success: function (response) {
                    //sessionStorage.setItem('access_token', response.access_token);
                    window.location.href = "";
                },
                error: function (err) {
                    Swal.fire({
                        icon: 'error',
                        title: err.responseText.error_description,
                        showConfirmButton: true,
                    });
                }
            });
        }

    </script>
</body>
</html>