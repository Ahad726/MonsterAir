@model MonsterAir.Models.FlightModels.FlightModel

@{
    ViewData["Title"] = "Confirm Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts{

}

<div class="container-fluid">
    <div class="row py-4 pl-5">
        <div class="col-lg-11">
            <div class="card card-primary">
                <div class="card-header">
                    <h2 class="card-title">Confirm Flight</h2>
                </div>
                <form asp-action="" method="">
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <input type="hidden" value="@Model.FlightId" asp-for="FlightId" />
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="FlightCode" class="control-label"></label>
                                <p>@Model.FlightCode</p>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="FlightName" class="control-label"></label>
                                <p>@Model.FlightName</p>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Source" class="control-label"></label>
                                <p >@Model.Source</p>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Destination" class="control-label"></label>
                                <p>@Model.Destination</p>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="TakeOfDate" class="control-label"></label>
                                <p>@Model.TakeOfDate</p>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Price" class="control-label"></label>
                                <p>@Model.Price</p>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label asp-for="AirportName" class="control-label"></label>
                            <p>@Model.AirportName</p>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                        <button type="submit" asp-controller="Flight" asp-action="Index" id="cancel_button" class="btn btn-outline-secondary ml-4">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
