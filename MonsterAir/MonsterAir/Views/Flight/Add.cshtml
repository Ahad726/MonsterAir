@model MonsterAir.Models.FlightModels.FlightModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts{

}

<div class="container-fluid">
    <div class="row py-4">
        <div class="col-md-11">
            <div class="card card-primary">
                <div class="card-header">
                    <h2 class="card-title">Add New Flight</h2>
                </div>
                <form asp-action="Add">
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="FlightCode" class="control-label"></label>
                                <input asp-for="FlightCode" class="form-control"/>
                                <span asp-validation-for="FlightCode" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="FlightName" class="control-label"></label>
                                <input asp-for="FlightName" class="form-control"  />
                                <span asp-validation-for="FlightName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Source" class="control-label"></label>
                                <input asp-for="Source" class="form-control"  />
                                <span asp-validation-for="Source" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Destination" class="control-label"></label>
                                <input asp-for="Destination" class="form-control"  />
                                <span asp-validation-for="Destination" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="TakeOfDate" class="control-label"></label>
                                <input asp-for="TakeOfDate" class="form-control"  />
                                <span asp-validation-for="TakeOfDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control"  />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label asp-for="AirportName" class="control-label"></label>
                            <input asp-for="AirportName" class="form-control"  />
                            <span asp-validation-for="AirportName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="submit" asp-controller="FLight" asp-action="Index" id="cancel_button" class="btn btn-outline-secondary ml-4">Back To List</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
